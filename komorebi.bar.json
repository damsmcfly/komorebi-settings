{
  "$schema": "https://raw.githubusercontent.com/LGUG2Z/komorebi/v0.1.38/schema.bar.json",
  "monitor": 0,
  "font_family": "JetBrainsMono NF",
  "font_size": 14,
  "height": 40,
  "padding": {
    "top": 0,
    "bottom": 0,
    "left": 5,
    "right": 5
  },
  "widget_spacing": 5,
  "left_widgets": [
    {
      "Komorebi": {
        "workspaces": {
          "enable": true,
          "hide_empty_workspaces": false,
          "display": "AllIconsAndText"
        },
        "layout": {
          "enable": true
        },
        "focused_window": {
          "enable": false,
          "show_icon": false
        }
      }
    }
  ],
  "center_widgets": [
    {
      "Applications": {
        "enable": true,
        "display": "IconAndText",
        "items": [
          {
            "name": " Control Panel",
            "icon": "\uf013 ",
            "tooltip": "Control Panel",
            "command": "control"
          },
          {
            "name": "This PC",
            "icon": "\uD83D\uDDA5",
            "tooltip": "This PC",
            "command": "explorer shell:MyComputerFolder"
          },
          {
            "name": "Downloads",
            "icon": "\udb80\uddda",
            "tooltip": "Downloads",
            "command": "explorer F:\\User\\seamus\\Downloads"
          },
          {
            "name": " Music",
            "icon": "\uf001",
            "tooltip": "Music",
            "command": "explorer F:\\Music"
          }
        ]
      }
    }
  ],
  "right_widgets": [
    {
      "Update": {
        "enable": true
      }
    },
    {
      "Media": {
        "enable": true
      }
    },
    {
      "Storage": {
        "enable": false
      }
    },
    {
      "Memory": {
        "enable": true
      }
    },
    {
      "Network": {
        "enable": true,
        "show_activity": false,
        "show_total_activity": false
      }
    },
    {
      "Date": {
        "enable": true,
        "format": "YearMonthDate"
      }
    },
    {
      "Time": {
        "enable": true,
        "format": "TwentyFourHourWithoutSeconds"
      }
    },
    {
      "Battery": {
        "enable": true
      }
    }
  ]
}
